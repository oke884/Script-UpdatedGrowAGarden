local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create screen GUI
local screenGui = Instance.new("ScreenGui", playerGui)
screenGui.Name = "FakeLoadingScreen"

-- Create background frame
local background = Instance.new("Frame", screenGui)
background.Size = UDim2.new(1, 0, 1, 0)
background.BackgroundColor3 = Color3.fromRGB(34, 139, 34) -- Garden green

-- Title
local title = Instance.new("TextLabel", background)
title.Size = UDim2.new(1, 0, 0.2, 0)
title.Position = UDim2.new(0, 0, 0.1, 0)
title.BackgroundTransparency = 1
title.Text = "ðŸŒ± Grow a Garden"
title.Font = Enum.Font.FredokaOne
title.TextSize = 48
title.TextColor3 = Color3.new(1, 1, 1)

-- Loading bar frame
local loadingBarBack = Instance.new("Frame", background)
loadingBarBack.Position = UDim2.new(0.25, 0, 0.7, 0)
loadingBarBack.Size = UDim2.new(0.5, 0, 0.05, 0)
loadingBarBack.BackgroundColor3 = Color3.fromRGB(200, 255, 200)

local loadingBarFill = Instance.new("Frame", loadingBarBack)
loadingBarFill.Size = UDim2.new(0, 0, 1, 0)
loadingBarFill.BackgroundColor3 = Color3.fromRGB(100, 200, 100)

-- Loading percentage
local percentLabel = Instance.new("TextLabel", background)
percentLabel.Size = UDim2.new(1, 0, 0.1, 0)
percentLabel.Position = UDim2.new(0, 0, 0.8, 0)
percentLabel.BackgroundTransparency = 1
percentLabel.Text = "Loading... 0%"
percentLabel.Font = Enum.Font.Gotham
percentLabel.TextSize = 24
percentLabel.TextColor3 = Color3.new(1, 1, 1)

-- Simulate loading
for i = 1, 100 do
	task.wait(0.05)
	loadingBarFill.Size = UDim2.new(i/100, 0, 1, 0)
	percentLabel.Text = "Loading... " .. i .. "%"
end

-- Remove screen after load
task.wait(0.5)
screenGui:Destroy()
